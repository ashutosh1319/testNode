<link rel="stylesheet" href="../stylesheets/style.css" />    
<script src="../javascripts/jquery.min.js"></script>
    
<script src="./javascripts/ustom.js"></script>    
</head>   

<body  ng-app="home_app"  ng-controller="home_ctrl">
   
<div class="container" >
  <div class="row">
    <div class="span12">
      <div class="head">
        <div class="container">
            <div class="col-md-12">
                <div class="span6">
                    <h1 class="muted">Manage Users</h1>
                </div>

                <div class="span4 offset2" style="margin-top:15px;">
                   
                </div>
            </div>
        </div>

        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li>
                            <a href="#/">Home</a>
                        </li>

                        <li>
                            <a href="#/about">About</a>
                        </li>

                        <li>
                            <a href="#/fsldjkfjslkd">Features</a>
